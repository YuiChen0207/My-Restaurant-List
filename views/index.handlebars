<!-- Search Bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">Find a Restaurant:</h4>
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="Enter restaurant or category"
            aria-label="Restaurant Name..."
            value=""
            aria-describedby="search-button"
          />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Restaurant List -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#if restaurants.length}}
          {{#each restaurants}}
            {{#with this}}
              <a href="/restaurants/{{name}}" class="text-secondary">
                <div class="card mb-3">
                  <img class="card-img-top" src="{{image}}" alt="{{name}}" />
                  <div class="card-body p-3">
                    <h6 class="card-title mb-1">{{name}}</h6>
                    <div class="restaurant-category mb-1">
                      <i class="fas fa-utensils pr-2"></i>
                      {{category}}
                    </div>
                    <span
                      class="badge rounded-pill bg-danger font-weight-normal"
                    >
                      {{rating}}
                      <i class="fas fa-star fa-xs"></i>
                    </span>
                  </div>
                </div>
              </a>
            {{/with}}
          {{/each}}
        {{else}}
          <h1 class="text-center w-75 mx-auto">Cannot find "{{keyword}}".</h1>
        {{/if}}
      </div>
    </div>
  </div>

  <!--pagination-->
  <ul class="pagination justify-content-center my-5">
    <li class="page-item me-2"><a
        class="btn btn-outline-secondary active"
        href="/restaurants/page/{{currentPage}}"
      >1</a></li>
    <li class="page-item me-2"><a
        class="btn btn-outline-secondary"
        href="/restaurants/page/{{currentPage}}"
      >2</a></li>
    <li class="page-item me-2"><a
        class="btn btn-outline-secondary"
        href="/restaurants/page/{{currentPage}}"
      >3</a></li>
  </ul>
</div>

